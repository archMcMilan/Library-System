<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Project4</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- Filters -->
  <filter>
    <display-name>CheckNotGuestInSessionFilter</display-name>
    <filter-name>CheckNotGuestInSessionFilter</filter-name>
    <filter-class>controller.filter.CheckNotGuestInSessionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CheckNotGuestInSessionFilter</filter-name>
    <url-pattern>/jsp/UserPage.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckNotGuestInSessionFilter</filter-name>
    <url-pattern>/jsp/AdminPage.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckNotGuestInSessionFilter</filter-name>
    <url-pattern>/jsp/BookList.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckNotGuestInSessionFilter</filter-name>
    <url-pattern>/jsp/UserBookHistory.jsp</url-pattern>
  </filter-mapping>
  
  <filter>
    <display-name>EncodingFilter</display-name>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>controller.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
    <display-name>CheckAdminInSessionFilter</display-name>
    <filter-name>CheckAdminInSessionFilter</filter-name>
    <filter-class>controller.filter.CheckAdminInSessionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CheckAdminInSessionFilter</filter-name>
    <url-pattern>/jsp/AdminPage.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckAdminInSessionFilter</filter-name>
    <url-pattern>/jsp/BookList.jsp</url-pattern>
  </filter-mapping>
  
  <filter>
    <display-name>CheckUserInSessionFilter</display-name>
    <filter-name>CheckUserInSessionFilter</filter-name>
    <filter-class>controller.filter.CheckUserInSessionFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CheckUserInSessionFilter</filter-name>
    <url-pattern>/jsp/UserPage.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CheckUserInSessionFilter</filter-name>
    <url-pattern>/jsp/BookHistory.jsp</url-pattern>
  </filter-mapping>
  
  <!-- Custom tag -->
  <jsp-config>
    <taglib>
      <taglib-uri>mytag</taglib-uri>
      <taglib-location>/WEB-INF/custom.tld</taglib-location>
    </taglib>
    
    <taglib>
      <taglib-uri>mytagDate</taglib-uri>
      <taglib-location>/WEB-INF/customDate.tld</taglib-location>
    </taglib>
  </jsp-config>
</web-app>